#!/bin/bash

. $(dirname "$0")/env

if [ ! -f "$brewbuild" ]; then
	git clone https://github.com/mxcl/homebrew "$bb"

	if [ ! -f "$brew" ]; then
		cp -r "$bb" "$b"
	fi
fi

INSTALL=install

$brewbuild -v $INSTALL autoconf automake libtool pkg-config gettext

if [ ! -f "$brew" ]; then
	git clone https://github.com/mxcl/homebrew "$b"
fi

$brew tap jessevdk/codyn

$brew "$@" $INSTALL --universal \
	autoconf \
	automake \
	libtool \
	glib \
	fontconfig \
	freetype \
	libpng \
	python3

$brew "$@" $INSTALL --universal --without-x --with-glib cairo

$brew "$@" $INSTALL --universal \
	jessevdk/codyn/gobject-introspection \
	jessevdk/codyn/py3cairo \
	jessevdk/codyn/pygobject3 \
	jessevdk/codyn/py3gobject3 \
	jessevdk/codyn/json-glib

$d/scripts/get-sources
