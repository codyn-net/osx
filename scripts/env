#!/bin/bash

pushd $(dirname $(dirname "$0")) > /dev/null
d=$(pwd -P)
popd > /dev/null

b="$d/.brew"
bb="$d/.brewbuild"

brew="$b/bin/brew"
brewbuild="$bb/bin/brew"

export PATH="$bb/bin:$PATH"
export PKG_CONFIG_PATH="$bb/lib/pkgconfig:$PKG_CONFIG_PATH"
export MACOSX_DEPLOYMENT_TARGET="10.9"
export HOMEBREW_SDKROOT="/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX$MACOSX_DEPLOYMENT_TARGET.sdk"
export SDKROOT="/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX$MACOSX_DEPLOYMENT_TARGET.sdk"

if [ -z "$dont_setup_brew" ]; then
	export PATH="$b/bin:$PATH"
	export PKG_CONFIG_PATH="$b/lib/pkgconfig:$b/Cellar/libffi/3.0.13/lib/pkgconfig:$b/Cellar/pixman/0.30.0/lib/pkgconfig:$b/Cellar/fontconfig/2.10.93/lib/pkgconfig:$b/Cellar/freetype/2.4.11/lib/pkgconfig:$PKG_CONFIG_PATH"
fi

prefix="/Library/Frameworks/Codyn.framework/Resources"
